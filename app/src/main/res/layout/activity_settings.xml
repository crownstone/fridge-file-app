<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				android:paddingBottom="@dimen/activity_vertical_margin"
				tools:context="nl.dobots.fridgefile.SettingsActivity">

	<TextView
		android:text="@string/minTemp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/textMinTemp"/>

	<EditText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:inputType="numberSigned"
		android:ems="10"
		android:id="@+id/editMinTemp"
		android:layout_below="@+id/textMinTemp"
		android:layout_alignParentStart="true"/>

	<TextView
		android:text="@string/maxTemp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/textMaxTemp"
		android:layout_below="@+id/editMinTemp"/>

	<EditText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:inputType="numberSigned"
		android:ems="10"
		android:id="@+id/editMaxTemp"
		android:layout_below="@+id/textMaxTemp"
		android:layout_alignParentStart="true"/>

	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/applySettings"
		android:id="@+id/applySettingsButton"
		android:layout_alignParentBottom="true"
		android:layout_alignParentStart="true"/>

</RelativeLayout>
